@model IEnumerable<new_job_now.Models.Category>
@{
    ViewBag.Title = "Home Page";
}
<link href="~/content/bootstrap.min.css" rel="stylesheet" />
<script src="~/content/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">


<div class="jumbotron ">
    <h1 class="display-4 text-right">مرحبا بك</h1>
    <p class="lead">مرحيا بك في فضاء البحث عن الوظائف بأختلاف أصنافها,يمكنك نشر وظيفة ان كنت من احدي الباحثين عن موظفون,ويمكنك البحث عن وظيفة ان كنت تبحث عن عمل </p>
    <hr class="my-4">
    
    <a class="btn btn-primary " style="float:right" href="#" role="button">المزيد</a>
</div>


@foreach (var item in Model)
{
    <div class="ub">
        <div class="alert alert-dark" role="alert">
            <h1>@Html.DisplayFor(modelItem => item.CategoryName) </h1>
            <p>@Html.DisplayFor(modelItem => item.CategoryDescription) </p>
        </div>
      
        
    </div>
        <div class="row">
            @foreach (var subitem in item.Jobs)
            {
                    <div class="col-md-3">
                        <div class="img" >
                            <h3>@Html.DisplayFor(modelItem => subitem.Jobtitel)</h3>
                            <img class="card-img-top" src="~/Uploads/@subitem.JobImage" alt="Card image cap">
                            
                            <p class="card-text">@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subitem.JobContect).ToString()))</p>
                            @Html.ActionLink("التفاصيل", "Details", new { JobId = subitem.Id }, new { @class = "deta" })
                        </div>
                    </div>
                
            }
        </div>
}



