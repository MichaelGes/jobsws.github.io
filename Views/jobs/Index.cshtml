@model IEnumerable<new_job_now.Models.job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_Main Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-stripped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jobtitel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContect)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jobtitel)
        </td>
        <td>

           @Html.Raw(HttpUtility.HtmlDecode (Html.DisplayFor(modelItem => item.JobContect).ToString()))
        </td>
        <td>
            @*<img class="card-img-top" src="~/Uploads/@subitem.JobImage" alt="Card image cap">*@
            <img src="~/Uploads/@Html.DisplayFor(model=>item.JobImage)" style="width:48px;height:48px; " />
                 
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
